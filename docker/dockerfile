# ---------- Base Image ----------
FROM python:3.12-slim

# ---------- Working Directory ----------
WORKDIR /app

# ---------- Copy Project ----------
COPY .. .

# ---------- Install System Tools ----------
RUN apt-get update && apt-get install -y --no-install-recommends git && rm -rf /var/lib/apt/lists/*

# ---------- Install Python Dependencies ----------
RUN pip install --no-cache-dir -r requirements.txt

# ---------- Expose Ports ----------
# 5000 = Flask API, 8501 = Streamlit UI
EXPOSE 5000 8501

# ---------- Start Both Services ----------
# Run Flask backend in background, then Streamlit
CMD bash -c "python src/api.py & streamlit run src/app.py --server.port=8501 --server.address=0.0.0.0"
